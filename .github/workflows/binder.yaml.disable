name: Call Shared Binder Workflow

on:
  pull_request_target:
    types: [opened]

jobs:
  call-shared-binder:
    uses: berkeley-dsep-infra/update-deployment/.github/workflows/shared-binder.yaml@main
    with:
      pr_head_ref: ${{ github.event.pull_request.head.ref }}
      pr_head_userrepo: ${{ github.event.pull_request.head.repo.full_name }}
      pr_number: ${{ github.event.pull_request.number }}
